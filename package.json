{
  "name": "next-by-risqi",
  "description": "A fullstack app with next js presented by Risqi Romadhoni",
  "displayName": "Next Boilerplate by Risqi Romadhoni",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Risqi Romadhoni",
    "email": "risqir57@gmail.com",
    "url": "https://risqiromadhoni.vercel.app"
  },
  "scripts": {
    "dev": "env-cmd -f .env.local next dev",
    "build": "env-cmd -f .env.local next build",
    "build:sit": "env-cmd -f .env.sit next build",
    "build:staging": "env-cmd -f .env.staging next build",
    "build:prod": "env-cmd -f .env.prod next build",
    "start": "next start",
    "lint": "next lint",
    "watch": "concurrently \"yarn watch:ts\" \"yarn watch:lint\"",
    "watch:ts": "tsc --noEmit -p . -w",
    "watch:lint": "esw --ignore-path .gitignore . --ext .ts,.tsx -w",
    "check:lint": "eslint -c .eslintrc.json --ignore-path .gitignore --ext .ts,.tsx ./src",
    "check:prettier": "prettier --config .prettierrc ./src/**/* --check",
    "lint:css": "stylelint --ignore-path .gitignore --fix \"./src/**/*.css\"",
    "check:ts": "tsc",
    "checker": "yarn tsc && yarn check:lint && yarn check:prettier && yarn lint:css",
    "format:lint": "eslint --fix ./src/**/* --ext .ts,.tsx --quiet",
    "format:prettier": "prettier --config .prettierrc ./src/**/* --write",
    "formatter": "yarn format:lint && yarn format:prettier",
    "stylelint-check": "stylelint-config-prettier-check",
    "postinstall": "husky install"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "next": "12.1.0",
    "next-auth": "^4.2.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "usehooks-ts": "^2.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@next/eslint-plugin-next": "^12.1.0",
    "@svgr/webpack": "^6.2.1",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.2",
    "@types/lodash": "^4.14.179",
    "@types/node": "17.0.19",
    "@types/react": "17.0.39",
    "@types/react-table": "^7.7.9",
    "@types/tailwindcss": "^3.0.9",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "autoprefixer": "^10.4.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-superjson-next": "^0.4.3",
    "classnames": "^2.3.1",
    "concurrently": "^7.0.0",
    "cssnano": "^5.0.17",
    "env-cmd": "^10.1.0",
    "envalid": "^7.2.2",
    "eslint": "^8.9.0",
    "eslint-config-next": "^12.1.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-watch": "^8.0.0",
    "husky": "^7.0.0",
    "next-compose-plugins": "^2.2.1",
    "next-i18next": "^10.3.0",
    "next-pwa": "^5.4.4",
    "postcss": "^8.4.6",
    "postcss-preset-env": "^7.4.1",
    "prettier": "^2.5.1",
    "stylelint": "^14.5.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "superjson": "^1.8.1",
    "tailwindcss": "^3.0.23",
    "typescript": "4.5.5"
  }
}
